  "scripts": {
    "start": "set SKIP_PREFLIGHT_CHECK=true && set PORT=3000 && react-scripts start",
    "dev": "set SKIP_PREFLIGHT_CHECK=true && set PORT=3000 && react-scripts start",
    "build": "set DISABLE_ESLINT_PLUGIN=true && set GENERATE_SOURCEMAP=false && react-scripts build",
    "build:analyze": "set ANALYZE=true && npm run build",
    "build:fast": "set GENERATE_SOURCEMAP=false && set SKIP_PREFLIGHT_CHECK=true && react-scripts build",
    "test": "set SKIP_PREFLIGHT_CHECK=true && react-scripts test --watchAll=false --coverage --passWithNoTests",
    "test:watch": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "if exist build rmdir /s /q build && if exist node_modules\\.cache rmdir /s /q node_modules\\.cache",
    "type-check": "tsc --noEmit"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
